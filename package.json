{
  "name": "allyson",
  "displayName": "Allyson - AI Web Agent - Pay As You Go OpenAI Operator Alternative",
  "version": "0.0.2",
  "description": "AI Web Agent at Scale",
  "author": "Allyson",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build  --target=firefox-mv2",
    "build:brave": "plasmo build  --target=brave-mv3",
    "build:edge": "plasmo build --target=edge-mv3",
    "build:opera": "plasmo build --target=opera-mv3",
    "package": "plasmo package",
    "package:firefox": "plasmo package  --target=firefox-mv2" 
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.0.0",
    "@clerk/themes": "^2.2.12",
    "@tabler/icons-react": "^3.29.0",
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^1.7.2",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "activeTab"
    ],
    "host_permissions": [
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "$CLERK_FRONTEND_API/*",
      "<all_urls>"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@swc/core",
      "browser-tabs-lock",
      "core-js",
      "esbuild",
      "keccak",
      "lmdb",
      "msgpackr-extract",
      "sharp"
    ]
  }
}
